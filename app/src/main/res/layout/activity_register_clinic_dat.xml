<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterClinicDatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="DATOS CLINICOS DE PACIENTE"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Base.TextAppearance.AppCompat.Title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            />
        <EditText
            android:id="@+id/edtPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ingrese Peso (kg)"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Altura"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            />
        <EditText
            android:id="@+id/edtAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ingrese Altura (cm)"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Familia con cancer"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            />
        <Spinner
            android:id="@+id/spinCancer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Sangre"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            />
        <Spinner
            android:id="@+id/spinSangre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            />
    </LinearLayout>
</ScrollView>